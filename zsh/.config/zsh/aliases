# Colorize grep output (good for log files)
if ! command -v rg &> /dev/null;
then
	alias grep='grep --color=auto'
else
	alias grep="rg"
fi
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# confirm before overwriting something
alias cp="cp -i"
alias mv='mv -i'
alias rm='rm -i'

alias l="ls -hal"

alias dev-vm="ssh rhoulihan@dev-rhoulihan -t zsh"

alias clangd="clangd-12"

alias whatsmyip="host myip.opendns.com resolver1.opendns.com"

# have xclip always copy to the system clipboard
alias xclip="xclip -selection clipboard"

# For reattaching work monitor
alias work-display="xrandr --output eDP-1 --mode 1920x1080 --pos 0x1080 --rotate normal --output DP-1 --off --output HDMI-1 --primary --mode 3840x2160 --pos 1920x0 --rotate normal --output DP-2 --off"


# For reattaching home monitor
alias home-display="xrandr --output eDP-1 --mode 1920x1080 --pos 0x1080 --rotate normal --output DP-1 --off --output HDMI-1 --primary --mode 1920x1080 --pos 1920x0 --rotate normal --output DP-2 --off"